<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Activity_Schedule">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="THỜI KHOÁ BIỂU"
        android:textSize="30sp"
        android:background="@color/main"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày tháng năm"
        android:textSize="20sp"
        android:gravity="left"
        android:textColor="@color/black"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="1"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="CN"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/black"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />

        <Button
            android:id="@+id/button_monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T2"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T3"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T4"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T5"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T6"
            android:padding="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            app:backgroundTint="@null"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="T7"
            android:padding="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_selector"
            app:backgroundTint="@null"
            android:textColor="@android:color/black" />
    </GridLayout>

    <TextView
        android:id="@+id/no_info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không có lịch học"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        />

    <ListView
        android:id="@+id/class_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical"
        android:divider="@android:color/transparent"
        android:dividerHeight="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>